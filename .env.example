# Environment Variables for Production Deployment
# Copy this file to .env on your production server and update values

# Database Configuration
DB_HOST=localhost
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASS=your_strong_password

# Application Settings
APP_ENV=production
DEBUG_MODE=false
SITE_URL=https://yourdomain.com

# Security Settings
SESSION_TIMEOUT=1800
SECURE_COOKIES=true

# File Upload Settings
MAX_FILE_SIZE=26214400
UPLOAD_MAX_FILESIZE=25M
POST_MAX_SIZE=30M

# Email Configuration (Optional)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=your_email_password

# Platform-Specific Notes:
# 
# HOSTINGER:
# DB_HOST=localhost (usually)
# Check cPanel for exact database details
# 
# AWS RDS:
# DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
# DB_PORT=3306
# 
# AZURE:
# DB_HOST=yourserver.mysql.database.azure.com
# DB_USER=username@yourserver
# 
# SHARED HOSTING:
# Check hosting provider documentation
# May require specific database host IP
